page { background: #f6f6f6; padding: 20px; }

/* 顶部 */
.header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
.title { font-size: 22px; font-weight: bold; color: #333; }
.btn-create { background: #07c160; color: white; font-size: 14px; margin: 0; border-radius: 30px; padding: 8px 20px; font-weight: bold; box-shadow: 0 4px 10px rgba(7, 193, 96, 0.3); }

/* 卡片列表 */
.card { background: white; padding: 20px; border-radius: 12px; margin-bottom: 15px; box-shadow: 0 2px 8px rgba(0,0,0,0.03); }

.row-top { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 10px; }
.tour-title { font-weight: bold; font-size: 17px; color: #333; width: 70%; }

/* 状态标签颜色 */
.status-tag { font-size: 12px; padding: 2px 8px; border-radius: 4px; font-weight: bold; }
.status-1 { background: #e6f7ff; color: #1890ff; } /* 报名中 */
.status-2 { background: #fffbe6; color: #fa8c16; } /* 进行中 */
.status-3 { background: #f5f5f5; color: #999; }    /* 已结束 */

.row-info { font-size: 13px; color: #999; margin-bottom: 20px; border-bottom: 1px solid #f9f9f9; padding-bottom: 15px; }

/* 底部按钮区 */
.action-row { display: flex; gap: 10px; align-items: center; }
.btn-op { font-weight: normal; font-size: 12px; border-radius: 4px; margin: 0; }
.btn-blue { background: #333; color: white; font-weight: bold; }

.del-text { color: #ccc; font-size: 12px; margin-left: auto; padding: 5px; }
.empty { text-align: center; color: #ccc; margin-top: 50px; font-size: 14px; }