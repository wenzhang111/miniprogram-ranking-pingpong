page { background: #f6f6f6; padding: 20px; }
.card { background: white; padding: 20px; border-radius: 12px; margin-bottom: 20px; }
.label { font-weight: bold; margin-bottom: 10px; display: block; }
.input { border: 1px solid #ddd; padding: 8px; border-radius: 4px; }

.player-list { display: flex; flex-direction: column; gap: 10px; max-height: 300px; overflow-y: scroll; }
.checkbox-item { display: flex; align-items: center; padding: 10px; border-bottom: 1px solid #eee; }
.checkbox-item text { margin-left: 10px; }

.info { text-align: center; color: #666; margin-bottom: 20px; }
.btn-main { background: #07c160; color: white; border-radius: 50px; }