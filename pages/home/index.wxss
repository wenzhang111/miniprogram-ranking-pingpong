page {
  background: #f6f6f6;
  min-height: 100vh;
}

.container {
  padding: 0;
}

/* --- 轮播图核心样式 --- */
.swiper-box {
  width: 100%;
  height: 220px; /* 容器给高度 */
  position: relative;
  background-color: pink; /* 【调试色】粉色！如果看到粉色说明位置对了 */
}

swiper {
  width: 100%;
  height: 100%; /* 继承容器高度 */
  background-color: #333; /* 【调试色】深灰色 */
}

.slide-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* --- 上传/删除按钮样式 --- */
.upload-btn {
  position: absolute;
  bottom: 15px;
  right: 15px;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 6px 14px;
  font-size: 12px;
  border-radius: 30px;
  z-index: 999;
}

.del-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  background: red;
  color: white;
  width: 24px;
  height: 24px;
  line-height: 24px;
  text-align: center;
  border-radius: 50%;
  font-size: 14px;
  z-index: 999;
}

/* --- 赛事报名列表样式 --- */
.section { padding: 15px; }
.section-title { display: flex; justify-content: space-between; align-items: center; font-weight: bold; font-size: 18px; margin-bottom: 15px; }
.create-link { font-size: 14px; color: #07c160; font-weight: normal; }
.tour-card { background: white; padding: 15px; border-radius: 10px; margin-bottom: 15px; display: flex; align-items: center; box-shadow: 0 2px 5px rgba(0,0,0,0.05); }
.tour-info { flex: 1; }
.tour-title { font-weight: bold; font-size: 16px; margin-bottom: 5px; }
.tour-date { color: #666; font-size: 12px; margin-bottom: 5px; }
.tour-desc { color: #999; font-size: 12px; }
.tour-count { color: #07c160; font-size: 12px; margin-top: 5px; font-weight: bold; }
.btn-sign { background: #07c160; color: white; font-size: 13px; padding: 0 15px; height: 35px; line-height: 35px; border-radius: 50px; margin-left: 10px; }
.btn-sign.disabled { background: #ccc; color: #fff; }
.empty { text-align: center; color: #ccc; margin-top: 20px; }