/* 全局背景 */
page { background-color: #f7f8fa; }
.container { padding: 0; min-height: 100vh; }

/* 导航栏 & 赛程列表样式 (保持不变) */
.top-navbar { position: fixed; top: 0; left: 0; width: 100%; height: 90rpx; background: #fff; display: flex; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05); z-index: 999; }
.nav-item { flex: 1; display: flex; align-items: center; justify-content: center; font-size: 30rpx; color: #666; position: relative; }
.nav-icon { margin-right: 8rpx; font-size: 32rpx; }
.nav-item.active { color: #07c160; font-weight: bold; }
.nav-item.active::after { content: ''; position: absolute; bottom: 0; width: 60rpx; height: 6rpx; background: #07c160; border-radius: 6rpx; }
.nav-placeholder { height: 90rpx; }

.filter-container { padding: 20rpx 30rpx; background: #f7f8fa; }
.filter-capsule { display: flex; background: #e8e8e8; border-radius: 50rpx; padding: 6rpx; }
.filter-item { flex: 1; text-align: center; padding: 12rpx 0; font-size: 26rpx; color: #888; border-radius: 40rpx; transition: all 0.2s; }
.filter-item.filter-active { background: #fff; color: #333; font-weight: bold; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1); }
.match-list { padding: 0 24rpx; box-sizing: border-box; }
.match-card { background: #fff; border-radius: 20rpx; padding: 30rpx; margin-bottom: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03); }
.card-header { display: flex; justify-content: space-between; margin-bottom: 30rpx; font-size: 24rpx; }
.tour-tag { background: #e8f3ff; color: #1890ff; padding: 4rpx 12rpx; border-radius: 8rpx; }
.round-tag { color: #999; }
.vs-row { display: flex; align-items: center; justify-content: space-between; margin-bottom: 40rpx; }
.player { flex: 1; text-align: center; font-size: 30rpx; font-weight: bold; color: #333; }
.player.is-winner { color: #07c160; }
.vs-center { font-size: 40rpx; font-weight: 900; color: #eee; font-style: italic; margin: 0 20rpx; }
.btn-action { border-radius: 50rpx; font-size: 28rpx; color: #fff; border: none; }
.btn-green { background: #07c160; }
.btn-red { background: #ff4d4f; }

/* === Tab 1 排名样式 (本次修改) === */
.search-box { background: #fff; padding: 30rpx; margin-bottom: 20rpx; }

/* Picker 行样式 */
.picker-row { 
  display: flex; 
  align-items: center; 
  margin-bottom: 24rpx; 
}
.picker-row:last-child { margin-bottom: 0; }

.picker-label {
  width: 80rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

picker {
  flex: 1;
}

.picker-display {
  display: flex; justify-content: space-between; align-items: center;
  background: #f5f5f5; 
  padding: 20rpx 30rpx; 
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}
.picker-display.placeholder { color: #999; }
.picker-display.disabled { opacity: 0.5; background: #eee; }
.arrow-icon { color: #bbb; font-size: 24rpx; }

/* 排名列表 */
.rank-header, .rank-item { display: flex; padding: 24rpx 0; text-align: center; font-size: 28rpx; }
.rank-header { background: #fafafa; color: #999; font-weight: bold; }
.rank-item { background: #fff; border-bottom: 1rpx solid #eee; }
.th, .td { flex: 1; }
.rk { flex: 0.6; }
.nm { flex: 1.5; font-weight: bold; color: #333; }
.pt { color: #07c160; font-weight: bold; }
.wl { color: #666; font-size: 24rpx; }
.rank-badge { display: inline-block; width: 40rpx; height: 40rpx; line-height: 40rpx; border-radius: 50%; background: #eee; color: #666; font-size: 24rpx; }
.top3 .rank-1 { background: #FFD700; color: #fff; }
.top3 .rank-2 { background: #C0C0C0; color: #fff; }
.top3 .rank-3 { background: #CD7F32; color: #fff; }

.empty-state { text-align: center; padding-top: 100rpx; }
.empty-img { width: 120rpx; opacity: 0.5; margin-bottom: 20rpx; }
.empty-text { display: block; color: #999; font-size: 26rpx; }