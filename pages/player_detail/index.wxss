page { background-color: #f2f4f7; }
.container { padding: 0; }

/* === 未注册页面样式 === */
.register-box { padding: 40px; text-align: center; }
.logo { font-size: 60px; margin-bottom: 20px; }
.reg-title { font-size: 24px; font-weight: bold; color: #333; margin-bottom: 10px; }
.reg-desc { color: #999; margin-bottom: 40px; font-size: 14px; }
.reg-input { background: white; border: 1px solid #eee; padding: 12px; margin-bottom: 15px; border-radius: 8px; text-align: left; }
.reg-btn { background: #07c160; color: white; border-radius: 50px; font-weight: bold; margin-top: 20px; }

/* === 个人主页样式 === */
.profile-container { padding: 15px; }

/* 1. 头部卡片 */
.header-card { 
  background: linear-gradient(135deg, #2b2e4a, #1f1f1f); 
  color: white; 
  padding: 25px 20px; 
  border-radius: 16px; 
  box-shadow: 0 5px 15px rgba(0,0,0,0.2); 
}
.user-row { display: flex; align-items: center; }
.avatar { width: 60px; height: 60px; background: #fff; color: #333; border-radius: 50%; font-size: 28px; font-weight: bold; display: flex; align-items: center; justify-content: center; margin-right: 15px; }
.user-info { flex: 1; }
.user-name { font-size: 20px; font-weight: bold; }
.user-id { font-size: 12px; opacity: 0.7; margin-top: 4px; background: rgba(255,255,255,0.2); padding: 2px 8px; border-radius: 10px; display: inline-block; }
.score-display { text-align: right; }
.score-num { display: block; font-size: 32px; font-weight: bold; color: #ffd700; line-height: 1; }
.score-label { font-size: 12px; opacity: 0.8; }
.signature { margin-top: 20px; font-size: 13px; opacity: 0.8; font-style: italic; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 10px; }

/* 2. 数据仪表盘 */
.stats-panel { 
  display: flex; 
  background: white; 
  margin-top: 15px; 
  padding: 20px 0; 
  border-radius: 12px; 
  box-shadow: 0 2px 8px rgba(0,0,0,0.03); 
}
.stat-box { flex: 1; text-align: center; }
.border-lr { border-left: 1px solid #eee; border-right: 1px solid #eee; }
.val { font-size: 20px; font-weight: bold; color: #333; }
.val.gold { color: #d4a017; }
.key { font-size: 12px; color: #999; margin-top: 5px; }

/* 3. 荣誉室 */
.trophy-room { background: white; margin-top: 15px; padding: 20px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.03); }
.panel-title { font-size: 16px; font-weight: bold; margin-bottom: 15px; color: #333; }
.trophy-list { display: flex; flex-wrap: wrap; gap: 10px; }
.trophy-tag { background: #fffbe6; color: #fa8c16; border: 1px solid #ffe58f; font-size: 13px; padding: 5px 10px; border-radius: 6px; font-weight: bold; }

/* 4. 菜单 */
.menu-group { background: white; margin-top: 15px; border-radius: 12px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.03); }
.menu-item { display: flex; align-items: center; padding: 18px 20px; border-bottom: 1px solid #f8f8f8; background: white;}
.menu-item:active { background: #fafafa; }
.menu-icon { margin-right: 15px; font-size: 18px; }
.menu-text { flex: 1; font-size: 15px; color: #333; }
.arrow { color: #ccc; }

.btn-reset { width: 100%; text-align: left; font-weight: normal; line-height: normal; border-radius: 0; }
.btn-reset::after { border: none; }